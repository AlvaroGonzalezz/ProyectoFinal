<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#F5F7FA"
    tools:context=".Perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ENCABEZADO -->
        <TextView
            android:id="@+id/tituloPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Mi Perfil"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:textColor="#25325B"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- FOTO DE PERFIL CIRCULAR -->
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:padding="4dp"
            android:elevation="3dp"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/tituloPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- CARD CON DATOS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDatos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/imgPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="@color/white"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical"


                android:background="@android:color/transparent"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp"
                >

                <!-- NOMBRE -->


                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre completo"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:gravity="center" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:background="#25325B"/>

                <!-- CAMPOS DE PERFIL -->
                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="14dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="14dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TelÃ©fono"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="14dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UbicaciÃ³n"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="14dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CumpleaÃ±os"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="14dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtRegistered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registro"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="14dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txtUUID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UUID"
                    android:textSize="18sp"
                    android:textColor="#444444"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
